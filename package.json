{
  "name": "@frederic-react-components/monorepo",
  "scripts": {
    "start": "cd packages/storybook && npm start",
    "bootstrap": "lerna bootstrap",
    "eslint": "eslint ./{components,packages}/*/src/**/*.js",
    "eslint:fix": "eslint --fix ./{components,packages}/*/src/**/*.js",
    "build": "lerna run build --parallel",
    "build:sync": "lerna run build",
    "build:lib": "lerna run build:lib --parallel",
    "build:es": "lerna run build:es --parallel",
    "build:dist": "npm run build:es && rimraf dist && webpack -p packages/govuk-react/es/index.js --output-filename dist/index.js",
    "pack": "lerna exec --parallel -- npm pack",
    "watch": "npm run watch:lib",
    "watch:es": "cross-env BABEL_ENV=es lerna exec --parallel -- babel src -d es -w --source-maps",
    "watch:lib": "lerna exec --parallel -- babel src -d lib -w --source-maps",
    "test": "cross-env CI=true npm run test:unit && npm run eslint && npm run flow",
    "test:unit": "jest --env=jsdom",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --env=jsdom",
    "test:snapshot": "npm run test:unit -- -u"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/{components,packages}/*/src/**.js",
      "!<rootDir>/{components,packages}/*/src/**/{stories,example,fixtures}.js",
      "!<rootDir>/packages/storybook/**"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/setupTests.js",
    "testMatch": [
      "<rootDir>/{components,packages}/*/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "description": "frederic-react-components: Frederic project specific components.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "dependencies": {
    "govuk-colours": "^1.0.3"
  },
  "peerDependencies": {
    "emotion": ">=9",
    "react-emotion": ">=9",
    "prop-types": ">=15",
    "react": ">=16"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/node": "^7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-flow": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "@babel/preset-stage-1": "^7.0.0-beta.40",
    "@frederic-react-components/arrow": "*",
    "@frederic-react-components/arrow-left": "*",
    "@frederic-react-components/compact-table-accordion-group": "*",
    "@frederic-react-components/count": "*",
    "@frederic-react-components/countdown-text-area": "*",
    "@frederic-react-components/counter-bar": "*",
    "@frederic-react-components/distraction-free": "*",
    "@frederic-react-components/header-button": "*",
    "@frederic-react-components/keyline": "*",
    "@frederic-react-components/open-button": "*",
    "@frederic-react-components/remove-button": "*",
    "@frederic-react-components/result-count": "*",
    "@frederic-react-components/result-count-title": "*",
    "@frederic-react-components/spinner": "*",
    "@frederic-react-components/table": "*",
    "@frederic-react-components/table-accordion-group": "*",
    "@frederic-react-components/title-result-count": "*",
    "@storybook/addon-actions": "^3.4.1",
    "@storybook/addon-knobs": "^3.4.1",
    "@storybook/addons": "^3.4.1",
    "@storybook/react": "^3.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-remove-prop-types": "^3.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "emotion": "^9.2.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.12.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^22.1.2",
    "jest-emotion": "^9.1.2",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "lerna": "^2.9.0",
    "manage-state": "0.0.3",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-collapse": "^4.0.3",
    "react-dom": "^16.2.0",
    "react-emotion": "^9.2.3",
    "react-motion": "^0.5.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.2",
    "webpack": "^3.10.0",
    "webpack-cli": "^2.0.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stevesims/frederic-react-components.git"
  },
  "author": "IBM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevesims/frederic-react-components/issues"
  },
  "homepage": "https://github.com/stevesims/frederic-react-components#readme",
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "private": true
}
