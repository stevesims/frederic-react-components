{
  "name": "@frederic-react-components/monorepo",
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-3"
    ]
  },
  "scripts": {
    "start": "cd packages/storybook && npm start",
    "bootstrap": "lerna bootstrap",
    "eslint": "eslint ./{components,packages}/*/src/**/*.js",
    "eslint:fix": "eslint --fix ./{components,packages}/*/src/**/*.js",
    "build": "lerna run build --parallel",
    "build:sync": "lerna run build",
    "build:lib": "lerna run build:lib --parallel",
    "build:es": "lerna run build:es --parallel",
    "build:dist": "npm run build:es && rimraf dist && webpack -p packages/govuk-react/es/index.js --output-filename dist/index.js",
    "pack": "lerna exec --parallel -- npm pack",
    "watch": "npm run watch:lib",
    "watch:es": "cross-env BABEL_ENV=es lerna exec --parallel -- babel src -d es -w --source-maps",
    "watch:lib": "lerna exec --parallel -- babel src -d lib -w --source-maps",
    "test": "cross-env NODE_ENV=test npm run test-unit && npm run eslint",
    "test:coverage": "cross-env NODE_ENV=test nyc npm run test-unit",
    "test-unit": "cross-env NODE_ENV=test tape -r babel-register -r jsdom-global/register -r ./test/init.js src/**/*.unit.js src/**/unit.js | faucet",
    "test-unit:debug": "cross-env NODE_ENV=test node --inspect-brk ./node_modules/tape/bin/tape -r babel-register -r jsdom-global/register -r ./test/init.js src/**/*.unit.js src/**/unit.js | faucet",
    "test-unit:watch": "cross-env NODE_ENV=test tape-watch -r babel-register -r jsdom-global/register src/**/*.unit.js src/**/unit.js -p faucet"
  },
  "watch": {
    "test": "./src/**/*.test.js"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-babel",
    "cache": false,
    "exclude": [
      "**/*.unit.js",
      "**/unit.js",
      "**/stories.js",
      "public",
      "coverage"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary"
    ]
  },
  "description": "frederic-react-components: Frederic project specific components.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "dependencies": {
    "govuk-colours": "^1.0.3"
  },
  "peerDependencies": {
    "glamorous": ">=4",
    "prop-types": ">=15",
    "react": ">=16"
  },
  "devDependencies": {
    "@frederic-react-components/arrow": "*",
    "@frederic-react-components/arrow-left": "*",
    "@frederic-react-components/compact-table-accordion-group": "*",
    "@frederic-react-components/count": "*",
    "@frederic-react-components/countdown-text-area": "*",
    "@frederic-react-components/counter-bar": "*",
    "@frederic-react-components/distraction-free": "*",
    "@frederic-react-components/header-button": "*",
    "@frederic-react-components/keyline": "*",
    "@frederic-react-components/open-button": "*",
    "@frederic-react-components/remove-button": "*",
    "@frederic-react-components/result-count": "*",
    "@frederic-react-components/result-count-title": "*",
    "@frederic-react-components/spinner": "*",
    "@frederic-react-components/table": "*",
    "@frederic-react-components/table-accordion-group": "*",
    "@frederic-react-components/title-result-count": "*",
    "@govuk-react/text-area": "^0.2.4",
    "@istanbuljs/nyc-config-babel": "^1.2.3",
    "@storybook/react": "^3.2.17",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "emotion": "^9.2.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.12.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-security": "^1.4.0",
    "faucet": "0.0.1",
    "glamorous": "^4.11.0",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "lerna": "^2.11.0",
    "manage-state": "0.0.3",
    "nyc": "^11.5.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-collapse": "^4.0.3",
    "react-dom": "^16.2.0",
    "react-emotion": "^9.2.3",
    "react-motion": "^0.5.2",
    "sinon": "^4.1.2",
    "tape": "^4.8.0",
    "tape-watch": "^2.3.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stevesims/frederic-react-components.git"
  },
  "author": "IBM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevesims/frederic-react-components/issues"
  },
  "homepage": "https://github.com/stevesims/frederic-react-components#readme",
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "private": true
}
